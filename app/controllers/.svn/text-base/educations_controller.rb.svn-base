class EducationsController < ApplicationController
  # GET /educations
  # GET /educations.xml
  def index
    @educations = Education.find_all_by_resume_id(params[:resume_id])

    respond_to do |format|
      format.html # index.html.erb
      format.xml  { render :xml => @educations }
    end
  end

  # GET /educations/1
  # GET /educations/1.xml
  def show
    @education = Education.find(params[:id])

    respond_to do |format|
      format.html # show.html.erb
      format.xml  { render :xml => @education }
    end
  end

  # GET /educations/new
  # GET /educations/new.xml
  def new
    @education = Education.new

    respond_to do |format|
      format.js {}
      format.html # new.html.erb
      format.xml  { render :xml => @education }
    end
  end

  # GET /educations/1/edit
  def edit
    @education = Education.find(params[:id])
    respond_to do |format|
      format.js {}
      format.html # new.html.erb
      format.xml  { render :xml => @education }
    end
  end

  # POST /educations
  # POST /educations.xml
  def create
    @education = Education.new(params[:education])
    @education.resume_id=params[:resume_id]
    respond_to do |format|
      if @education.save
        flash[:notice] = 'Education was successfully created.'
        format.js {}
        format.html {
          case params[:commit] || ""
          when "保存并进入下一步"
            redirect_to new_user_resume_speciality_path(params[:user_id],
              params[:resume_id])
          else  #when "保存并继续创建"
            redirect_to new_user_resume_education_path(params[:user_id],
              params[:resume_id])
          end

        }
        format.xml  { render :xml => @education, :status => :created, :location => @education }
      else
        format.html { render :action => "new" }
        format.xml  { render :xml => @education.errors, :status => :unprocessable_entity }
      end
    end
  end

  # PUT /educations/1
  # PUT /educations/1.xml
  def update
    @education = Education.find(params[:id])

    respond_to do |format|
      if @education.update_attributes(params[:education])
        flash[:notice] = 'Education was successfully updated.'
        format.js {}
        format.html { redirect_to(user_resume_education_path(params[:user_id],params[:resume_id], @education)) }
        format.xml  { head :ok }
      else
        format.html { render :action => "edit" }
        format.xml  { render :xml => @education.errors, :status => :unprocessable_entity }
      end
    end
  end

  # DELETE /educations/1
  # DELETE /educations/1.xml
  def destroy
    @education = Education.find(params[:id])
    @education.destroy

    respond_to do |format|
      format.js {}
      format.html { redirect_to(user_resume_educations_path(params[:user_id],params[:resume_id])) }
      format.xml  { head :ok }
    end
  end

  #查询 学校名称
  def auto_complete_for_education_school_name
    @items =  Education.find(:all,
      :conditions =>"(lower(school_name) like '%#{params[:education][:school_name].downcase}%' )   ",
      :select=>"distinct school_name" )
    render :inline => "<%= auto_complete_result @items, 'school_name', '#{params[:education][:school_name]}' %>"
  end
end
