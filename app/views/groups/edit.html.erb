<div id="left_content">
  <%= render :partial=>"groups/manage_type",:object=>@group %>
  <% form_for(@group,{},:html=>{:class=>"form_info required-validate",:multipart => true}) do |f| %>
    <%= f.error_messages %>
    <%= render :partial=>"groups/form" ,:object=>f %>
    <p>
      <%= f.submit '保存',:disable_with=>"保存…",:disabled => false ,:class=>"button"%>  <%= link_to '取消', @group %>
    </p>
  <% end %>

</div>
<div id="right_content">

  <% sub_block_div() do %>
    <p>
      <%= link_to "<< 返回[#{ @group.name}]小组首页", @group %>
    </p>
    <p>
      <%=  (link_to "×解散小组",group_path(@group),:method => :delete,:class=>"red_text" ,:confirm=>"你确定吗?") if @group.is_root?(current_user) -%>
    </p>
  <%end%>

</div>