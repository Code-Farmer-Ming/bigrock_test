<div class="<%= cycle("topic_item color_tr", "topic_item") %>">
  <div class="r">
    <%if topic_item.last_comment %>
      <span ><%=   link_to_user_name(topic_item.last_comment.user)%>
        最后回于 <%=time_ago_in_words(topic_item.last_comment.created_at)  %></span>
    <%end%>
    &nbsp;<%=  link_to_user_name(topic_item.author)%>
    写于
    <%=  time_ago_in_words_plus(topic_item.created_at)%>
  </div>
  <%= "[置顶]"  if topic_item.top_level %>
  <%=  link_to topic_item.title,[topic_item.owner,topic_item],:target=>"_blank" %> <span><%= "回复#{topic_item.comments_count}" if topic_item.comments_count>0 %></span>
  <p class="clear"></p>
</div>
