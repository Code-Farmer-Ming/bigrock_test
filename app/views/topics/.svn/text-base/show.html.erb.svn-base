
<div id ="left_content">
  <h2>
    <%=h @topic.title %>
  </h2>
  <div class="">
    <div class="r make_up_down" id="<%= dom_id(@topic,'up_down') %>">
      <%= render :partial=>"comm_partial/up_down_operation",:object=>@topic %>
    </div>
    <div class="l" >
      <%=render :partial=>"users/user_icon_name",:object=>@topic.author %>
    </div>
    <div class="main_content text_content">
      <p class="comment_date">
        发布于 <%= " #{localize(@topic.author.created_at)}" %>
      </p>
      <div>
        <%= simple_format(auto_link(h(@topic.content))) %>
      </div>
    </div>
    <p class="clear"></p>
  </div>
  <div class="text_content">
    <div id="comments">
      <%= render :partial=>"comments/comment",:collection=>@topic.comments %>
    </div>
    <div id="comment_reply">
      <%if  @can_reply%>
        <%= render :partial=>"comments/new_form",:object=>@topic %>
      <%else%>
        <%= link_to "加入 小组才能回复" %>
      <%end%>
    </div>
  </div>
</div>

<div id="right_content">
  <%  sub_block_div() do %>
    <div id="topic_operation">
      <%= render :partial=>"topics/operation" %>
    </div>
  <%end%>
  <%  sub_block_div() do %>
    <%= link_to "#{@topic.owner.name}首页", [@topic.owner] %>
  <%end%>
  <%  sub_block_div("热门回复") do %>
    <%= render :partial=>"comments/hot_comment",:collection=>@topic.comments.hot_comments %>
  <%end%>
  <%  sub_block_div("相关话题") do %>
    <%= render :partial=>"comm_partial/topic_or_news_title_item",
      :collection=> @topic.related_topics %>
  <%end%>
</div>