<%show_group = show_group || false%>
<div class="<%= cycle("topic_item gray_background", "topic_item") %>">
  <div class="r">
    <%if topic_item.last_comment %>
      <span >&nbsp;<%=   link_to_user_name(topic_item.last_comment.user)%>
        最后回于 <%=time_ago_in_words(topic_item.last_comment.created_at)  %>  </span>
      <%end%>
      <span >&nbsp;<%=  link_to_user_name(topic_item.author)%>
      写于
      <%=  time_ago_in_words_plus(topic_item.created_at)%>
    </span>
      <%=  link_to "[#{topic_item.owner.name}]",[topic_item.owner],:title=>"#{topic_item.owner.name}"  if show_group%>
  </div>
  <%= "[置顶]"  if show_group && topic_item.top_level   %>
  <%=  link_to highlight(h(topic_item.title),params[:search]),[topic_item.owner,topic_item],:target=>"_blank",:title=>topic_item.title %> <span><%= "回复#{topic_item.comments_count}" if topic_item.comments_count>0 %></span>
 
</div>
