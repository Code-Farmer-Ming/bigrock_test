
<div id ="left_content">
  <h2>
    <%=h @topic.title %>
  </h2>
  <div class="">
    <div class="r make_up_down" id="<%= dom_id(@topic,'up_down') %>">
      <%= render :partial=>"comm_partial/up_down_operation",:object=>@topic %>
    </div>
    <div class="l" >
      <%=render :partial=>"users/user_icon_name",:object=>@topic.author %>
    </div>
    <div class="main_content icon_right_content">
      <p class="date_field">
        发布于 <%= " #{localize(@topic.author.created_at)}" %>
        &nbsp;
        被推荐 <%= link_to "#{@topic.recommends.size}次",
          recommends_path(:recommendable_type=>@topic.class.to_s,:recommendable_id=>@topic) %>
        &nbsp;
        回复 <%= link_to "#{@topic.comments.size}次","#comments" %>
      </p>
      <div>
        <%= simple_format(auto_link(h(@topic.content))) %>
      </div>
    </div>
    <p class="clear"></p>
  </div>
  <div class="icon_right_content">
    <div id="comments">
      <%= render :partial=>"comments/comment",:collection=>@comments %>
        <%= will_paginate  @comments %>
    </div>
    <div id="comment_reply" class="item_content">
      <%if  @can_reply%>
        <%= render :partial=>"comments/new_form",:object=>@topic %>
      <%else%>
        <%if current_user%>
          <%= link_to "+加入 小组才能回复",[@topic.owner]  %>
        <%else%>
          <%= link_to_remote   "+加入 小组才能回复",:url=>{:controller=>"account",:action=>"login"},:method => :get  %>
        <%end%>
      <%end%>
    </div>
  </div>
</div>

<div id="right_content">
  <%  sub_block_div() do %>
    <div id="topic_operation">
      <%= render :partial=>"topics/operation" %>
    </div>
  <%end%>
  <%  sub_block_div() do %>
    <%= link_to "#{@topic.owner.name}首页", [@topic.owner] %>
  <%end%>
  <%  sub_block_div("热门回复") do %>
    <%= render :partial=>"comments/hot_comment",:collection=>@topic.comments.hot_comments %>
  <%end%>
  <%  sub_block_div("相关话题") do %>
    <%= render :partial=>"comm_partial/topic_or_news_title_item",
      :collection=> @topic.related_topics %>
  <%end%>
</div>