<% form_for(@recommend ,{},:html=>{:class=>"form_info"}) do |f| %>
  <h1>推荐</h1>
  <%= f.error_messages %>
  <p>推荐给我的好友</p>
  <p>
    <%= f.label :memo,"说点什么",:class=>"filed_lab" %><%= f.text_area :memo %>
  </p>
  <%= f.hidden_field :recommendable_type %>
  <%=  f.hidden_field :recommendable_id %>
  <p>
    <%= f.submit '保存' %>
  </p>
<% end %>