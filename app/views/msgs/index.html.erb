<%= render :partial=>"msgs/notification_types" %>
<table id="msg_list_table">
  <tr>
    <th >标题</th>
    <th><%= (params[:type]=="send" ? "接收人" : "发送人") %></th>
    <th>日期</th>
    <th></th>
  </tr>
  <% @msgs.each do |msg| %>
    <tr class="<%= cycle("", "gray_background") %>">
      <td class="msg_title"><%=link_to(msg.title+(msg.can_response? ? "" : "     (对方已关闭)") ,account_msg_path(msg) ,:title=>msg.content)%></td>
      <td> 
        <%= ((params[:type]=="send") ? link_to(msg.sendee.name,user_path(msg.sendee)) : link_to(msg.sender.name,user_path(msg.sender)) ) %>
      </td>
      <td><%= localize(msg.created_at) %></td>
      <td><%= link_to '回复', account_msg_path(msg) %>
        <%= link_to '删除', account_msg_path(msg,:type=>params[:type]), :confirm => '你确定吗?', :method => :delete %></td>
    </tr>
  <% end %>

  <%if @msgs.size<1%>
    <tr>
      <td>
        <h4>目前还没有消息 </h4>
      </td>
    </tr>
  <%end%>
  <tr>
    <td>
      <%= will_paginate @msgs %></td>
  </tr>
</table>


