<div class="main_content" id="<%= dom_id(msg_info) %>">

  <div class="l" title="发送者">
    <%= render :partial=>"users/user_icon_name",:object=>msg_info.sender %>
  </div>
  <div class="l" >
    &nbsp;
  </div>
  <div class="l" title="接收者">
    <%= render :partial=>"users/user_icon_name",:object=>msg_info.sendee %>
  </div>
  <div class="l msg_text">

    <p class="msg_title">
      <%= h  msg_info.title if msg_info.title%>
    </p>
    <p class="comment_date">
      <%= localize(msg_info.created_at) %>
    </p>
    <p class="msg_content  text_content">
      <%=simple_format(msg_info.content) %>
      <%#*textilize%>
    </p>

  </div>

  <div class="clear"></div>
</div>