<%log = object%>
<div class="topic_item" id="<%= dom_id(log)%>">
  <span  class= "r small quiet"><%= date_ago_in_words(log.created_at)%></span>
 
  <div class="l">

    <%if log.owner.class==Company%>
      <%=  render(:partial=>"companies/company_icon",:object=>log.owner)%>

    <%elsif log.owner.class==User%>
      <%= render(:partial=>"users/user_icon_name",:object=>log.owner) %>
    <%elsif log.owner.class==Group %>
      <%= render(:partial=>"groups/icon_name",:object=>log.owner) %>
    <%end%>
  </div>
 
  <div class="log_text  <%= "group_log_text" if log.owner.class==Group %>">
    <%= yield  %>
   
  </div>

  <div class="c"></div>
</div>
