<%url ||= nil%>
<% form_for "search",:url=> url || {:action=>'search'},:html=>{:method=>"get",:class=>"inline"}  do |f| %>
  <%= text_field_tag  "search",@template.params[:search],:class=>"text" %>
  <%= hidden_field_tag "type",@template.params[:type] %>
  <%= text_default_value 'search',default_text %>
  <%=  f.submit "搜索" ,:disable_with=>"搜索",:disabled => false,:class=>"button"%>
<%end%>