<%edu=show_edu_info%>
<h4>
  <%if current_user?(edu.resume.user)%>
    <span class="operation_lab">
      <%= link_to_remote "",
        {:update=> dom_id(edu,"edit_container"),
        :before=>"PerpareEdit('#{dom_id(edu)}')",
        :complete=>"$('#{dom_id(edu,"edit_container")}').select('Form').each(function(el){ el.focusFirstElement();})",
        :url=>edit_user_resume_education_path(edu.resume.user,edu.resume,edu),:method=>"get"},
        :class=>"edit_img_button",:title=>"编辑" %>
      <%=  link_to_remote "",
        {:url=>user_resume_education_path(edu.resume.user,edu.resume,edu), :confirm => '确定删除吗?', :method => :delete},
        :class=>"del_img_button",:title=>"删除"%>
    </span>
  <%end%>
  <%=edu.school_name%>
</h4>
<div ><%=edu.major%> <%= edu.degree %></div>
<div class="date_field">
  <%= edu.begin_date%> - <%=edu.end_date%> (<%= distance_of_time_in_words(edu.begin_date,edu.end_date)%>)
</div>
<p>
  <%=  edu.description %>
</p>