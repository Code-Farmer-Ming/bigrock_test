
<% remote_form_for(Education.new,
  :url=>user_resume_educations_path(params[:user_id],params[:resume_id]),
  :loading=>"$('education_submit').disabled=true;",
  :complete=>"$('education_submit').disabled=false;",
  :html=>{:method=>:post,:class=>"form_info required-validate"}) do |f| %>

  <%= render :partial=>"educations/form",:object=>f %>
  <%= f.submit '保存',:class=>"button"%>
  <%= link_to_function "取消","Element.hide('new_education_container')"%>
<% end %>
