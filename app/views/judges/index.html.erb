
<h1><%= "#{@user.name}" %>的评价</h1>
<div id="left_content">
  <h2><%=  params[:pass_id]!="-1" ? @pass.company.name : "全部" %></h2>
  <%= render :partial=>"passes/show_star_judge",:object=>@pass if params[:pass_id]!="-1"  %>

  <%= render :partial=>"judges/show_text_judges",:collection=>@judges  %>
  <%= will_paginate  @judges %>
</div>
<div id="right_content">
  <%= link_to "<< #{@user.name} 首页",user_path(@user) %>
  <ul id="company_list">
    <li id="<%=  params[:pass_id]!='-1' ? "" : "current_company" %>"><%= link_to "全部",user_resume_pass_judges_path(@user,params[:resume_id],-1) %></li>
    <% @user.current_resume.passes.each do |pass|-%>
      <li id="<%= pass.to_param==params[:pass_id] ? "current_company" : "" %>" >
      <%= link_to  "#{pass.company.name} (#{pass.judges.size})" ,user_resume_pass_judges_path(@user,params[:resume_id],pass) %></li>
    <%end-%>
  </ul>
</div>