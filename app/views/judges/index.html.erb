<div id="left_content">
  <h1><%= "#{@user.name}" %>的评价</h1>

  <p >总评<%= big_star(@user.avg_judge_value|| 0) %><span class="red_text"><%=  @user.avg_judge_value%></span></p>
  <h2><%=  params[:pass_id] ? @pass.company.name : "全部" %></h2>
  <%= render :partial=>"passes/show_star_judge",:object=>@pass if params[:pass_id] %>

  <%= render :partial=>"judges/show_text_judges",:collection=>@judges  %>
  <%= will_paginate  @judges %>
</div>
<div id="right_content">
  <% sub_block_div() do%>
    <%= link_to "<< #{@user.name} 首页",user_path(@user) %>
  <%end%>
  <ul id="company_list">
    <li id="<%=  params[:pass_id] ? "" : "current_company" %>"><%= link_to "全部",user_judges_path(@user) %></li>
    <% @user.current_resume.passes.each do |pass|-%>
      <li id="<%= pass.to_param==params[:pass_id] ? "current_company" : "" %>" >
        <%= link_to  "#{pass.company.name} (#{pass.judges.size})" ,user_resume_pass_judges_path(@user,pass.resume,pass) %></li>
    <%end-%>
  </ul>
</div>