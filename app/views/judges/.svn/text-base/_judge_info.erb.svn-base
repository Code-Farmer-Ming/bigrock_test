<%judge= judge_info %>

<div class="l">
  <%= render :partial=>"users/user_icon_name",:object=> ( judge.anonymous ? UserRegisterInfo.anonymity : judge.judger  )%>
</div>
<div class="judge_content">
  <p class="date_field"><%= localize(judge.created_at) %></p>
  <p>
    工作能力 <%= small_star(judge.ability_value || 0) %> 
    交往能力
    <%= small_star(judge.eq_value || 0) %>
    资料真实
    <%= small_star(judge.creditability_value || 0) %>
  </p>

  <p>
    <%= judge.description %>
  </p>
</div>
<p class="clear" />
