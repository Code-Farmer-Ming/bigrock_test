
<% pass = judge_operation %>
<% if !current_user?(pass.user) %>
  <% if (pass.yokemate?(current_user))
    if (!my_judge= pass.judges.find_by_judger_id(current_user)) %>

      <%= link_to_remote_lightbox("我来评价",
        {:url=>new_user_resume_pass_judge_path(pass.resume.user,pass.resume,pass.id)},:class=>"hot_link") %>

    <%else%>

      <%= link_to_remote_lightbox("修改我给的评价",
        {:url=>edit_user_resume_pass_judge_path(pass.user,pass.resume,pass.id,my_judge)},:class=>"hot_link") %>
      <%=  link_to_remote "删除我给的评价",:url=>user_resume_pass_judge_path(pass.user,pass.resume,pass,my_judge), :confirm => '确定删除吗?', :method => :delete%>

    <%end%>
  <%end%>
<%else%>
  <%=  link_to_remote_lightbox( "邀请同事对你评价吧",
    {:url=>available_yokemates_user_resume_pass_path(pass.user,pass.resume,pass.id)},:class=>"hot_link") %>
<%end%>