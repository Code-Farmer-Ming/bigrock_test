<% remote_form_for(@base_info,:url=>user_base_info_path(params[:user_id],@base_info),:html=>{:class=>"form_info"})  do |f| %>
  <%= f.error_messages %>
  <%= render :partial=>"base_infos/form" ,:object=>f %>
  <%= f.submit '保存',:disable_with=>"保存…",:disabled => false,:class=>"button" %>
  <%= link_to_function "取消","Element.hide('edit_container_user_base_info');Element.show('user_base_info');Element.show('main_thumb_img');//Element.show('summary_info')" %>
<% end %>

