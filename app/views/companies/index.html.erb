<div id="left_content">

  <%tabs do%>
    <%= tab_button("综合最满意的公司","top_5_integration_company" ) %>
    <%= tab_button("待遇最满意的公司","top_5_salary_company") %>
    <%= tab_button("环境最满意的公司","top_5_condition_company") %>
  <%end%>
  <div>
    <div class="panel" id="top_5_integration_company">
      <%= render :partial=>"companies/company_rank",:collection=>@integration_best_companies %>
      <p class="c"/>
    </div>
    <div class="panel" id="top_5_salary_company">
      <%= render :partial=>"companies/company_rank",:collection=> @salary_best_companies  %>
      <p class="c"/>
    </div>
    <div  class="panel" id="top_5_condition_company">
      <%= render :partial=>"companies/company_rank",:collection=> @condition_best_companies  %>
      <p class="c"/>
    </div>
  </div>

  <% sub_block_div("公司行业") do%>
    <div id="industry_link_list">
      <% Industry.all.each do |item| %>
        <%=  link_to item.name,"#",:class=>"industry_tag" %>
      <%end%>
    </div>
  <%end%>
  <%sub_block_div("公司热门标签",link_to("全部标签",{:action=>"all_tags"})) do%>
    <%= render :partial=>"comm_partial/show_tag" ,:collection=>@hot_tags  %>
  <%end%>

</div>
<div id="right_content">
  <% sub_block_div() do%>
    <%= render :partial=>"comm_partial/search",:locals=>{:default_text=>"输入公司名称"} %>
  <%end%>
  <% sub_block_div() do%>
    <%= link_to "我来创建公司" ,new_company_path(),:class=>"button"%>
  <%end%>
  <% sub_block_div("最新加入的公司") do%>
    <%= render :partial=>"companies/company_short_info",:collection=>@newly_companies %>
  <%end%>
</div>