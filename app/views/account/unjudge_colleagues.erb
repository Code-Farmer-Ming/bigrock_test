<div id="left_content">
   <%= render :partial=>"judges/type",:object=>@user %>
  <%= render :partial=>"users/user_info_and_operation" ,:collection=> @unjudge_colleagues %>
  <%= will_paginate   @unjudge_colleagues%>

</div>
<div id="right_content">
  <% sub_block_div() do%>
    <%= link_to "<< 返回 #{@user.name} 首页",user_path(@user) %>
  <%end%>
  <% sub_block_div() do%>
    <ul class="list">
      <li id="<%=  params[:pass_id] ? "" : "current_li" %>" class="topic_item"><%= link_to "全部",unjudge_colleagues_account_path() %></li>
      <% @user.passes.each do |pass|-%>
        <li id="<%= pass.to_param==params[:pass_id] ? "current_li" : "" %>"   class="topic_item">
          <%= link_to  "#{pass.company.name}" ,unjudge_colleagues_account_path(:pass_id=>pass) %></li>
      <%end-%>
    </ul>
  <%end%>
</div>