<%= render :partial=>"account/setting_types" %>

<div id="left_content">
  <div class="form_info" id="set_base_info_page">

    <% form_for(@user,:url=>set_base_info_account_path(),:html=>{:method=>:put,:class=>"required-validate" }) do |f| %>
      <%= f.error_messages %>
      <div id="thumb_img">
        <%= img_upload_field( attachments_path(),
          @user.icon_file_path, nil,
          {:button_text=>" 更改图片",:post_params=>{:type=>UserIcon.to_s},:button_width=>60,:button_height=>18
          }) %>
      </div>
      <p>
        <%= f.label :email,"电子邮件",:class=>"filed_lab" %>
        <%= f.text_field :email,:class=>"required validate-email text",:maxlength=>64 %>
      </p>

      <p id="form_button">
        <%= submit_tag "保存"  ,:class=>"button"  -%>
      </p>

    <% end %>
  </div>
</div>
<div id="right_content">
  <p>
    修改密码及邮箱
  </p>
</div>

