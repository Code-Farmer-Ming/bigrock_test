
  <div class="form_info" id="user_login_page">
    <h1>登录</h1>
    <% form_tag "login" ,:class=>"required-validate" do -%>
      <%= hidden_field_tag "reurl",params[:reurl] %>
      <p>
        <label   for="name" class="filed_lab" >电子邮件</label>
        <%= text_field_tag  :email, params[:email]  ,:class=>"input_text required validate-email",:title=>"*邮箱地址",:maxlength=>64  %>
      </p>
      <p>
        <label  for="password" class="filed_lab" >密码 </label>
        <%= password_field_tag :password, params[:password],:class=>"input_text required",:title=>"*密码",:maxlength=>18  -%>
      </p>
      <p>
        <label  class="filed_lab" >&nbsp;</label>
        <%= check_box_tag  "auto_login", "true",false -%>
        <label for="auto_login"  ><span title="一个月内自动登录">一个月内自动登录</span></label>
      </p>

      <p id="form_button">
        <%= submit_tag "登录"    -%>    <%=link_to "注册",:action=>"new" -%> <%=link_to "忘记密码",forget_password_account_path()%>
      </p>

    <% end %>
  </div>
 
