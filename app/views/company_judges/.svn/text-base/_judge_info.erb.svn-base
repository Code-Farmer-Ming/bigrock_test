<%  judge  = judge_info %>
<div class="l">
  <%= render :partial=>"users/user_icon_name",:object=> ( judge.anonymous ? UserRegisterInfo.anonymity : judge.user  )%>
</div>
<div class="judge_content">
  <p class="date_field"><%= localize(judge.created_at) %></p>
  <p>
    待遇
    <%= small_star(judge.salary_value || 0) %>
    <br />
    环境
    <%= small_star(judge.condition_value || 0) %>
  </p>
  <p>
    <%= judge.description %>
  </p>
</div>
<p class="clear_float"></p>