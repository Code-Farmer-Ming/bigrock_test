<%  judge  = judge_info %>
<div class="l">
  <%= render :partial=>"users/user_icon_name",:object=> ( judge.anonymous ? User.anonymity : judge.user  )%>
</div>
<div class="icon_right_content">
  <p class="date_field"><%= localize(judge.created_at) %></p>
  <p>
    待遇
    <%= small_star(judge.salary_value || 0) %>
    <br />
    环境
    <%= small_star(judge.condition_value || 0) %>
  </p>
  <p>
    <%= judge.description %>
  </p>
  <%if judge.user.taggings.find(:all,:select=>"tags.*",:joins=>"join tags on taggings.tag_id=tags.id",:conditions=>{:taggable_id=>judge.company.id,
        :taggable_type=>Company.to_s}).size>0%>
    <p>
      标签&nbsp;<%= render :partial=>"tags/tag_info" ,
        :collection=>judge.user.taggings.find(:all,:select=>"tags.*",:joins=>"join tags on taggings.tag_id=tags.id",:conditions=>{:taggable_id=>judge.company.id,
          :taggable_type=>Company.to_s}),:locals=>{:type=>:Company}  %>
    </p>
  <%end%>
</div>
<p class="clear_float"></p>