<%  judge  = judge_info %>
<div class="l">
  <%= render :partial=>"users/user_icon_name",:object=> judge.judge_user%>
</div>
<div class="icon_right_content">
  <p class="date_field"><%= localize(judge.created_at) %></p>
  <p>
    待遇
    <%= small_star(judge.salary_value || 0) %>
    <br />
    环境
    <%= small_star(judge.condition_value || 0) %>
  </p>
  <p>
    <%= judge.description %>
  </p>
  <%if judge.user.used_tags(judge.company).size>0%>
    <p>
      标签&nbsp;<%= render :partial=>"tags/tag_info" ,
        :collection=>judge.user.used_tags(judge.company),:locals=>{:type=>:Company}  %>
    </p>
  <%end%>
</div>
<p class="clear_float"></p>