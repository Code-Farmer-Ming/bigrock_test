<%resume = show_summary_info%>
<dl style= "display:<%= resume.educations[0] ||  resume.passes[0] || "none"   %>">
  <%if resume.user.setting.can_visibility?(:pass_summary_visibility,current_user)%>
    <%if resume.current_pass-%>
      <dt>当前职位</dt>
      <dd>
        <ul>
          <li>
            <b> <%= resume.current_pass.title %></b>
            在
            <b><%=  resume.current_pass.company.name %> </b>
          </li>
        </ul>
      </dd>
    <%end%>
    <dt style="display:<%= resume.passes[0] || "none" %>">工作经历
    <dd>
      <ul  id="summary_pass">
        <%= render :partial=>"passes/show_summary_pass" ,:collection=> resume.passes%>
      </ul>
    <%end%>
    <%if resume.user.setting.can_visibility?(:edu_summary_visibility,current_user)%>
    <dt style="display:<%= resume.educations[0] || "none"   %>">教育经历
    <dd>
      <ul id="summary_edu">
        <%= render :partial=>"educations/show_summary_edu" ,:collection=> resume.educations%>
      </ul>
    <%end%>
</dl>