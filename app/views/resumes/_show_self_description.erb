<%resume  = show_self_description %>
<% if (!resume.self_description.blank?) ||  current_user?(resume.user) -%>
  <div class="section <%= current_user?(resume.user) ? "edit_section" : "" %>">

    <span class="operation_lab">
      <%= render :partial=>"resumes/visibility_set",
        :locals=>{:value=>resume.user.setting.self_description_visibility,:visibility_value=>"self_description",:resume=>resume} if  current_user?(resume.user) %>
      <%=   link_to "","",:id=>dom_id(resume,"ext"),:class=>"edit_img_button" if  current_user?(resume.user) %>
    </span>
    <h2>自我描述</h2>
  </div>
<div   class="section" id="<%= dom_id(resume,"self_description") %>"><%= simple_format(resume.self_description) -%></div>
  <%=  in_place_editor(dom_id(resume,"self_description") ,
    :url=>url_for({:controller=>:resumes,:action => "set_resume_self_description", :id => resume}),:loading_text=>"载入…",
    :external_control=>dom_id(resume,"ext"),
    :external_control_only=>"true",
    :click_to_edit_text=>"",
    :saving_text=>"保存…",
    :save_text=>"保存",
    :cancel_text=>"取消",
    :emptyText=>" ",
    :size=>12,:rows=>6,:cols=>50) if  current_user?(resume.user) %>

<%end%>