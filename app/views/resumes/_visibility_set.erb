
  <%=  content_tag :a,"",:href=>"javascript:;",:id=>:"#{visibility_value}_visibility_button",
    :class=>"visible_#{UserSetting::VISIBILITY_TYPES.index(value)}",
    :title=>"可见权限设置 当前为 #{value}" %>
  <% menu("#{visibility_value}_visibility_set") do %>
    <%menu_item() do-%>
      <% link_to_remote_with_block("公开",
        {:url=>set_resume_visibility_account_path(:"user_setting[#{visibility_value}_visibility]"=>UserSetting::VISIBILITY_TYPES[0])}) do-%>
        <%=  content_tag :span,"",:class=>'visible_0' -%>
      <%end -%>
    <%end-%>
    <%menu_item() do-%>
      <% link_to_remote_with_block("只有好友",
        {:url=>set_resume_visibility_account_path(:"user_setting[#{visibility_value}_visibility]"=>UserSetting::VISIBILITY_TYPES[1])}) do-%>
        <%=  content_tag :span,"",:class=>'visible_1' -%>
      <%end-%>
    <%end-%>
    <%menu_item() do-%>
      <% link_to_remote_with_block("不公开",
        {:url=>set_resume_visibility_account_path(:"user_setting[#{visibility_value}_visibility]"=>UserSetting::VISIBILITY_TYPES[2])}) do-%>
        <%=  content_tag :span,"",:class=>'visible_2' -%>
      <%end -%>
    <%end-%>
  <%end-%>
  <%= popmenu("#{visibility_value}_visibility_button","#{visibility_value}_visibility_set") -%>
 