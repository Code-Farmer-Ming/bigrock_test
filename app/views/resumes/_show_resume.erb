<%resume=show_resume%>
<%if ! resume.nil? -%>
  <div id="base_info"  >
    <%if resume.user.setting.can_visibility?(:img_visibility,current_user) -%>
      <div class="thumb_img" id="main_thumb_img"><span title="<%= User::STATE_TYPES[resume.user.state.to_sym || :working] %>"
                                   class="user_state_<%= resume.user.state || "working" %> user_state_at_icon <%= current_user?(resume.user) ? "current_user_state" : "" %>"></span><%= image_tag  resume.user.icon_file_path-%></div>
      <%end-%>
    <div id="user_base_info" class="section <%= current_user?(resume.user) ? "edit_section" : "" %>" >

      <%= render(:partial=>"resumes/show_base_info",:object=>resume)%>
    </div>
    <div id="edit_container_user_base_info" style="display:none" class="partial_container"  >
    </div>
  </div>
  <%= javascript_tag(" AddHover('base_info')") %>
  <%if resume.user.setting.can_visibility?(:self_description_visibility,current_user)%>
    <div id="self_description"  >
      <%= render :partial=>"resumes/show_self_description",:object=>resume %>
    </div>
    <%= javascript_tag(" AddHover('self_description')") %>
  <%end%>

  <%if resume.user.setting.can_visibility?(:pass_visibility,current_user)%>
    <div id="pass" >
      <div id="pass_infos" style="display:<%=  (resume.passes.length>0 || ( current_user?(resume.user))) ? "" : "none" %>">
        <div class="section <%= current_user?(resume.user) ? "edit_section" : "" %>">
          <%content_tag :span,:class=>"operation_lab" do -%>
            <%= render :partial=>"resumes/visibility_set",
              :locals=>{:value=>resume.user.setting.pass_visibility,:visibility_value=>"pass",:resume=>resume}  %>
            <%= link_to_function "","PerpareNew('new_pass_container');",
              :class=>"add_img_button",:title=>"添加" %>
          <%end if  current_user?(resume.user)-%>
          <h2 >工作经历</h2>
        </div>
        <%= render :partial=>"passes/show_passes",:collection=>resume.passes  %>
      </div>
      <div id="new_pass_container" style="display:none" class="partial_container"  >
        <%= render_component :controller=>"passes",:action=>:new,
          :params=>{:user_id=>resume.user.id,:resume_id=>resume.id} %>
      </div>
    </div>
    <%= javascript_tag(" AddHover('pass')") %>
  <%end%>
  <% if resume.user.setting.can_visibility?(:edu_visibility,current_user)  %>
    <div id="education">
      <div id="education_infos" style="display:<%= (( current_user?(resume.user)) || resume.educations.length>0) ? "" : "none" %>">
        <div  class="section <%= current_user?(resume.user) ? "edit_section" : "" %>">

          <% content_tag :div , :class=>"operation_lab" do -%>
            <%= render :partial=>"resumes/visibility_set",
              :locals=>{:value=>resume.user.setting.edu_visibility,:visibility_value=>"edu",:resume=>resume} %>

            <%= link_to_function "","PerpareNew('new_education_container');",
              :class=>"add_img_button",:title=>"添加" %>
          <%end if  current_user?(resume.user) %>
          <h2>教育</h2>
        </div>
        <%= render(:partial=>"educations/show_edus",:collection=>resume.educations) %>
      </div>
      <div id="new_education_container" class="partial_container" style="display:none;">
        <%= render_component :controller=>"educations",:action=>:new,
          :params=>{:user_id=>resume.user.id,:resume_id=>resume.id} %>
      </div>
    </div>
    <%= javascript_tag(" AddHover('education')") %>
  <%end%>
  <% if resume.user.setting.can_visibility?(:speciality_visibility,current_user) && (( current_user?(resume.user)) || resume.specialities.length>0)  %>
    <div id="speciality">
      <div class="section <%= current_user?(resume.user) ? "edit_section" : "" %>">
        <% content_tag :div,:class=>"operation_lab" do %>
          <%= render :partial=>"resumes/visibility_set",
            :locals=>{:value=>resume.user.setting.speciality_visibility,:visibility_value=>"speciality",:resume=>resume} %>

          <%= link_to_function "","PerpareNew('new_speciality_container');",
            :class=>"add_img_button",:title=>"添加" %>
        <%end if  current_user?(resume.user) %>
        <h2>专长</h2>
      </div>
      <dl id="speciality_infos">
        <%= render :partial=>"specialities/show_specials",:collection=> resume.specialities   %>
      </dl>
      <div id ="new_speciality_container" class="partial_container" style="display:none;">
        <%= render_component :controller=>"specialities",:action=>:new,
          :params=>{:user_id=>resume.user.id,:resume_id=>resume.id} %>
      </div>
    </div>
    <%= javascript_tag(" AddHover('speciality')") %>

  <%end%>
<%else%>
  <%= link_to("添加简历",new_user_resume_path(user)) %>
<%end%>
