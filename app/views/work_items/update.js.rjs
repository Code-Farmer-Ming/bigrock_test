if @work_item.errors.size>0
  page[dom_id(@work_item,"error_msg")].show
  page[dom_id(@work_item,"error_msg")].replace_html( render(:partial=>"comm_partial/flash_msg"))
  page.delay(2) do
    page[dom_id(@work_item, "error_msg")].visual_effect(:fade)
  end
end
page[dom_id(@work_item)].show
page[dom_id(@work_item,"edit_container")].hide
page[dom_id(@work_item)].replace_html(render(:partial=>"show_work_item_info",:object=>@work_item))
page[dom_id(@work_item)].visual_effect(:highlight)
