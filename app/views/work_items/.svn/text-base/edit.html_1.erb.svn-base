<h1>Editing resume</h1>

<% form_for(:resume,@resume, :url => { :action => "update" }, :html => { :method => :put}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <fieldset>
    <legend>个人信息</legend>
    <p>基本信息</p>
    <hr>
    <p>
      <%= f.label :user_name,"姓名" %><br />
      <%=f.text_field :user_name %>
    </p>
    <p>
      <%= f.label :sex,"性别" %><br />
      <%=f.radio_button(:sex,"true",:checked => true )%><%= f.label :sex_true,"男" %>
      <%=f.radio_button(:sex,"false")%><%= f.label :sex_false,"女" %>
    </p>
    <p>
      <%= f.label :birthday,"出生日期" %><br />
      <%=f.date_select :birthday  %>
    </p>

    <p>
      <%= f.label :website1,"博客" %><br />
      <%=f.text_field :website1 %>
    </p>
    <p>
      <%= f.label :website2,"网站" %><br />
      <%=f.text_field :website2  %>
    </p>


    <p>联系信息</p>
    <hr>
    <p>
      <%= f.label :address,"目前地址" %><br />
      <%=f.text_field :address %>
    </p>
    <p>
      <%= f.label :phone1,"移动电话" %><br />
      <%=f.text_field :phone1 %>
    </p>
    <p>
      <%= f.label :phone1,"固定电话" %><br />
      <%=f.text_field :phone1 %>
    </p>

    <p>自我描述<br />

    <%= f.text_area :self_description  %></p>
  </fieldset>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', user_resume_path(params[:user_id],@resume) %> |
<%= link_to 'Back', user_resumes_path %>