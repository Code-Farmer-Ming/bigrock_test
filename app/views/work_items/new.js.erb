<% remote_form_for(WorkItem.new,
  :url=>user_resume_pass_work_items_path(params[:user_id],params[:resume_id],params[:pass_id]),
  :loading=>"$('work_item_submit').disabled=true;",
  :complete=>"$('work_item_submit').disabled=false;",
  :html=>{:method=>:post,:class=>"form_info required-validate"}) do |f| %>

  <%= render :partial=>"work_items/form" ,:object=>f %>

  <%= f.submit '保存',:class=>"button"%> <%= link_to_function "取消","Element.hide('new_work_item_container_pass_#{params[:pass_id]}')" %>

<% end %>
