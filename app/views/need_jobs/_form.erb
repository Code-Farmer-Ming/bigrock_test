<%  f = form %>
<%= f.error_messages %>
<p>
  <%= f.label :title,"标题",:class=>"filed_lab" %>
  <%= f.text_field :title,:class=>"text" %>
</p>
<div class="form_row">
  <%= f.label :skill_text,"特长",:class=>"filed_lab" %>
  <%=  text_field_with_auto_complete :need_job, :skill_text,{:class=>"text",:id=>dom_id(f.object,"name")},:tokens=>Skill::DELIMITER %>多个用空格分开
</div>
<p>
  <%= f.label :state_id,"所在地" ,:class=>"filed_lab"%>

  <%= f.select :state_id,State.to_select_option %>
  <%= f.select :city_id,  City.to_select_option(f.object.state_id,"") %>

  <%=  drop_list("need_job_state_id","need_job_city_id",State.to_select_option_with_city(nil,""))%>
</p>
<p>
  <%= f.label :type_id,"工作类型" ,:class=>"filed_lab"%>
  <%= f.select :type_id,Job.types %>

</p>
<p>
  <%= f.label :description,"描述",:class=>"filed_lab" %>
  <%= f.text_area :description %>
</p>
<p>
   <label  class="filed_lab" >&nbsp;</label>
   <%= check_box_tag  "is_need_broadcast", "true",true -%>
  <label for="is_need_broadcast"  ><span title="自动转发">同时自动转发给所有关注我的人</span></label>
</p>