
<div id="left_content">
  <h1><%= "#{current_user?(@user) ? "我" : @user.name}"  %>的好友列表</h1>
  <%= render :partial=>"users/friend_type" %>

  <%= render :partial=>"users/user_or_company_info_and_operation" ,:collection=>@friends_user  %>
  <p class="clear_float" />
  <%= will_paginate @friends_user %>
</div>
<div id="right_content">

  <% sub_block_div() do %>
    <%= render :partial=>"comm_partial/search",:locals=>{:default_text=>"输入名称"} %>
  <%end%>
  <% sub_block_div() do %>
    <%= link_to "返回 #{@user.name} 个人页面",user_path(@user) %>
  <%end%>
</div>
