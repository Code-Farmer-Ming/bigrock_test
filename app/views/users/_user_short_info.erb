<%pass ||= nil%>
<div class="user_short_info" id="<%= dom_id(user_short_info,"friend") %>">
  <div class="l">
    <%= render :partial=>"users/user_icon_name",:object=> user_short_info  %>
  </div>
  <div class="short_info">
    <% user_short_info.current_resume.current_pass.each() do |current_pass| %>
      <div title="当前的工作">
        <b>
          <%= link_to(current_pass.company.name,company_path(current_pass.company),:target=>"_blank")%>
        </b>
        <br />
        <%= h current_pass.title%>
      </div>
    <%end if user_short_info.current_resume%>
    <%if pass then%>
    <div class="gray_color_background" title="过去的工作">
        <b>
          <%= link_to(pass.company.name,company_path(pass.company),:target=>"_blank")%>
        </b>
        <br />
        <%= h pass.title%>
      </div>
    <%end%>
    <div class="user_my_language"  title="<%= user_short_info.my_language %>">
      <%= truncate(auto_link(h(user_short_info.my_language)))  %>
    </div>
  </div>
  <p class="clear" />
</div> 