<div id="left_content">
  <div class="r">
    <%= render :partial=>"companies/company_icon",:object=>@company %>
  </div>
  <h1><%= "#{@company.name} 新闻" %> </h1>
  <p class="clear"></p>
  <%= render :partial=>"news/news_short_info",:collection=>@news %>
  <%= will_paginate @news %>

</div>
<div id="right_content">
  <div class="sub_block">
    <div class="sub_block_content">
      <%= link_to '我来发布新闻', new_company_piecenews_path(params[:company_id]),:class=>"button" %>
      <br class="clear"/>
      <%= link_to "#{@company.name}首页",company_path(@company)  %>

    </div>
  </div>
  <div class="sub_block">
    <div class="sub_block_title">热门新闻</div>
    <div class="sub_block_content">
      <%= render :partial=>"comm_partial/topic_or_news_title_item",:collection=>@company.news.populars(:limit=>10) %>
    </div>
  </div>
</div>