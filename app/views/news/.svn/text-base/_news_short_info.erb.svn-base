<% piece_news = news_short_info
show_icon ||= false
%>
<div class="news_short_content" >
  <p class="news_title">
    <%= link_to "#{piece_news.title}", company_piecenews_path(piece_news.owner,piece_news),:target=>"_blank" %>
  </p>
  <div>
    <div class="r">
      <%= render :partial=>"companies/company_icon",:object=>piece_news.owner if show_icon  %>
    </div>
    <div class="news_content">
      <p class="comment_date">
        <%=link_to piece_news.create_user.name ,user_path(piece_news.create_user) %> <%= " #{localize(piece_news.created_at)} 发布 " %>
        <%=  link_to(piece_news.last_edit_user.name ,users_path(piece_news.last_edit_user)) + " #{localize(piece_news.created_at)} 修改" if  piece_news.last_edit_user%>
      </p>
      <p>
        <%= h(truncate("#{piece_news.content}", :length=>255))%>
<%#= link_to 'Show', company_piece_news_path(params[:company_id],piece_news) %>
      </p>
      <p><%= link_to "详细…", company_piecenews_path(piece_news.owner,piece_news),:target=>"_blank" %>  <%= link_to '编辑', edit_company_piecenews_path(piece_news.owner,piece_news) if piece_news.owner.current_employees.exists?(current_user)%>
        <%= link_to '删除', company_piecenews_path(piece_news.owner,piece_news), :confirm => '确定删除吗?', :method => :delete if piece_news.owner.current_employees.exists?(current_user) %>
      </p>
    </div>

    <p class="c"></p>
  </div>

</div>
