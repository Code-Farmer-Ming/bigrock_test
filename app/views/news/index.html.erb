<div id="left_content">
  <div class="r">
    <%= render :partial=>"companies/company_icon",:object=>@company if @company%>
  </div>
  <h1><%= "#{@company ? @company.name : ''} 新闻" %> </h1>
  <p class="clear"></p>
  <%= render :partial=>"news/news_short_info",:collection=>@news,:locals=>{:show_icon=>!@company}%>
  <%= will_paginate @news %>

</div>
<div id="right_content">
  <% sub_block_div() do%>
    <%= render :partial=>"comm_partial/search",:locals=>{:default_text=>"搜索新闻"} %>
  <%end%>
  <%sub_block_div('') do%>
    <%= link_to "返回[#{@company.name}]首页",company_path(@company)  %>
    <br class="clear"/>
    <%= link_to '我来发布新闻', new_company_piecenews_path(params[:company_id]),:class=>"button" %>
  <%end if @company%>

  <%sub_block_div('最热门新闻',link_to("全部",{:action=>:search,:up_order=>"desc"})) do%>
    <%= render :partial=>"comm_partial/topic_or_news_title_item",:collection=>@hot_news%>
  <%end%>
 
  <%sub_block_div("被推荐最多的新闻") do%>
    <%= render :partial=>"comm_partial/topic_or_news_title_item",:collection=> @most_recommand %>
  <%end%>
  <%sub_block_div("最热门回复") do%>
    <%= render :partial=>"comments/hot_comment",:collection=> @most_recommand_comment,:locals=>{:show_news_title=>true} %>
  <%end%>
</div>