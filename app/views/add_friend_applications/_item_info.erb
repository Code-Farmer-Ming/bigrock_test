<div id="<%= dom_id(object)%>" class="<%= cycle("item_content", "gray_background item_content") %>">
  <div class="l">
    <%= render :partial=>"users/user_icon_name",:object=>object.applicant %>
  </div>
  <div class="icon_right_content">
    <p class="r" id="<%= dom_id(object,:operation) %>">
      <%= link_to_remote "同意",{:url=>accept_add_friend_application_path(object)},:class=>"button positive" ,:title=>"成为同事" %>
      <%= link_to_remote "忽略", {:url=>add_friend_application_path(object),:confirm=>"你确定吗?",:method=>:delete} ,:class=>"red_text",:title=>"删除" %>
    </p>
    <p class="quiet">
      <%=  localize(object.created_at) %>
    </p>
    <p>
      <%= object.memo %>
    </p>
  </div>
  <p class="clear_float" />
</div>