<%spec = show_special_info%>
<%if  current_user?(spec.resume.user) %>
  <span class="operation_lab" >
    <%= link_to_remote "",{:update=>dom_id(spec,"edit_container") ,
            :before=>" PerpareEdit('#{dom_id(spec)}')",
            :complete=>"$('#{dom_id(spec,"edit_container")}').select('Form').each(function(el){ el.focusFirstElement();})",
            :url=>edit_user_resume_speciality_path(spec.resume.user,spec.resume,spec),:method=>"get"},
      :class=>"edit_img_button",:title=>"编辑" %>
    <%=  link_to_remote "",{:url=>user_resume_speciality_path(spec.resume.user,spec.resume,spec), :confirm => '确定删除吗?', :method => :delete},
      :class=>"del_img_button",:title=>"删除"%>
  </span>
<%end%>
<b ><%=spec.name%></b>&nbsp;&nbsp;&nbsp;&nbsp;
<%= spec.description %>
