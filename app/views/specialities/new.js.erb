<% remote_form_for(Speciality.new,
  :url=>user_specialities_path(params[:user_id]),
  :loading=>"$('speciality_submit').disabled=true;",
  :complete=>"$('speciality_submit').disabled=false;",
  :html=>{:method=>:post,:class=>"form_info required-validate"}) do |f| %>
  <%= render :partial=>"specialities/form",:object=>f %>
  <%= f.submit '保存' ,:class=>"button"%> <%= link_to_function "取消","Element.hide('new_speciality_container')"%>
<% end %>
