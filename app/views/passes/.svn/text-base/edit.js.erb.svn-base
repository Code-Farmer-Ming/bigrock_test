<% remote_form_for(@pass,:url=>user_resume_pass_path(params[:user_id],params[:resume_id],@pass),:html=>{:method=>:put,:class=>"form_info",
    :onsubmit=>"var request = #{remote_function(:url=>{:action =>"comany_exists?"},
    :with=> "'name=' + $('company_name').value",:method => :get,
    :type=>:synchronous)};if (request.transport.responseText=='false') { Lightbox.show('#{new_company_path(:"company[name]"=>'')}'+ encodeURIComponent($('company_name').value)); return false;} "}) do |f| %>
  <%= f.error_messages %>
  <%= render :partial=>"passes/form" ,:object=>f,:locals=>{:pass=>@pass} %>
  <%= f.submit '保存',:disable_with=>"保存…" %>
  <%= link_to_function "取消"  do |page|
    page << "Element.toggle('#{dom_id(@pass)}');"
    page << "Element.toggle('#{dom_id(@pass,'edit_container')}')"
  end%>
<% end %>
