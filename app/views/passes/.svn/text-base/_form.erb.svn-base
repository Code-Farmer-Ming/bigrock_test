<%  f = form %>

<p>
  <%= f.label :company_name,"公司"  ,:class=>"filed_lab" %>

  <%=  text_field_with_auto_complete :company, :name,
    {:value=>(pass.company.name if pass.company),:title=>"系统会自动提示公司名称"} %>输入部分名称，系统会自动提示公司名称
</p>

<p>
  <%= f.label :department,"部门" ,:class=>"filed_lab"  %>
  <%=  text_field_with_auto_complete :pass,:department,{},{:with=>"'company[name]='+$('company_name').value ",
    :active=>{:department_drop_list=>:click},
    :extension_html=>"<span id='department_drop_list' class='drop_button'>&nabla;</span>"} %>
</p>
<p>
  <%= f.label :title,"职位" ,:class=>"filed_lab" %>

  <%=  text_field_with_auto_complete :pass,:title,{},{:with=>"'company[name]='+$('company_name').value",
    :active=>{:title_drop_list=>:click},
    :extension_html=>"<span id='title_drop_list' class='drop_button'>&nabla;</span>" } %>
</p>
<p>
  <%= f.label :begin_date,"工作时间" ,:class=>"filed_lab"  %>
  <%= f.date_select :begin_date,:start_year => 1950,:discard_day=>true %>
  到
  <span id="pass_end_date" style="display:<%= pass.is_current ? 'none' : '' %>">
  <%= f.date_select :end_date,:start_year => 1950,:discard_day=>true %></span>
  <%= f.check_box :is_current ,:onchange=>"Element.toggle('pass_end_date')" -%>
  <%= f.label :is_current,"当前仍在" -%>
</p>
<p>
  <%= f.label :work_description,"工作描述"  ,:class=>"filed_lab" %>
  <%= f.text_area :work_description, :rows=>4 %>
</p>
