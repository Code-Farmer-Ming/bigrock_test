<%if object.create_user==current_user%>
  <%= link_to  '编辑', edit_company_job_path(params[:company_id],object),:class=>"button" -%>
  <%= link_to  '删除', company_job_path(params[:company_id],object), :confirm => '确定删除吗?',
    :method => :delete,:class=>"button negative" -%>
<%else%>
  <%= link_to_remote_lightbox '申请' ,
    {:url=>new_company_job_applicant_path(params[:company_id],object)},:class=>"button" -%>
  <%= link_to_remote_lightbox  '推荐人才',
    {:url=>recommend_talent_company_job_applicant_path(params[:company_id],object)},:class=>"button" -%>
<%end%>