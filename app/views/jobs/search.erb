<%search_form   do |f|%>
  <div id="left_content">
    <div class="bottom_gray_line ">
      <p  >
        <%= text_field_tag  "search",params[:search],:class=>"text" %>
        <%= text_default_value 'search',"职位搜索" %>
        <%=  f.submit "搜索" ,:disable_with=>"搜索",:disabled => false,:class=>"button"%>
        共<%= @jobs.size %>记录
      </p>
    </div>

    <ul class="list">
      <%= render :partial=>"jobs/info_item",:collection=>@jobs %>
    </ul>
  </div>
  <div id="right_content">
    <% sub_block_div("搜索条件") do %>
      <p>
        <%=label_tag  :address ,"城市",:class=>"" %><br/>
        <%= select_tag :state_id,options_for_state(params[:state_id].to_i),
          {:onchange=>'this.form.onsubmit();this.form.submit();return false;'}  %>
        <%= select_tag :city_id,options_for_city(params[:state_id],params[:city_id].to_i),
          {:onchange=>'this.form.onsubmit();this.form.submit();return false;'}  %>
        <%=  drop_list("state_id","city_id",[[0,[[0,'所有市']]]]+State.all.collect {|p| [ p.id,[[0,'所有市']]+p.cities.all.collect{|q| [q.id,q.name] } ] })%>
      </p>
      <p>
        <%= label_tag :since_day,"发布日期" %><br/>
        <%= select_tag :since_day,options_for_since_day(params[:since_day].to_i),
          {:onchange=>'this.form.onsubmit();this.form.submit();return false;'}  %>
      </p>
      <p>
        <%= label_tag :job_type,"职位类型" %><br/>
        <%= select_tag :job_type,options_for_job_type(params[:job_type].to_i),
          {:onchange=>'this.form.onsubmit();this.form.submit();return false;'}  %>
      </p>
    <%end%>

  </div>
<%end%>

