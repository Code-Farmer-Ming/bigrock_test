<%#= f.label :end_at ,"有效日期",:class=>"filed_lab"%>
<%#= f.date_select :end_at %>
<%#*</p>%>
<div class="form_row">
  <%= f.label :description,"描述",:class=>"filed_lab" %>
  <%= f.text_area :description,:class => "mceEditor"  %>
</div>

