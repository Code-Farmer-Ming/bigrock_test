ul.popmenu  {
    border:solid 1px #DEDEDE;
    border-top:none;
    background:#FFFFFF;
    position:absolute;
    top:4px;
    width:150px;
    margin:0px;
    padding:0;
    clear:both;
    z-index:299;
    display:none;
}
ul.popmenu  li{
    background:none;
    display:block;
    float:none;
    margin:0;
    border:0;
    height:auto;
    line-height:normal;
    border-top:solid 1px #DEDEDE;
}
ul.popmenu  li a{
    background:none;
    display:block;
    float:none;
    padding:6px 6px;
    margin:0;
    border:0;
    height:auto;
    color:#105cbe;
    line-height:normal;
}
ul.popmenu  li a:hover{
    background:#e3edef;
}
